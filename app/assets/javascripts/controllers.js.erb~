
angular.module("home", [], function($routeProvider) {
	$routeProvider.when('/', 
		{templateUrl: '<%= asset_path("home.html") %>', controller: homeCtrl});
	$routeProvider.when('/about', 
		{templateUrl: '/about', controller: aboutCtrl});
	$routeProvider.when('/post/:id', 
		{templateUrl: '/post', controller: postCtrl});

});


function homeCtrl($scope, $http) {
	$http({method: 'GET', url: '/posts'}).
		success(function(data, status, headers, config) {
			$scope.posts = data;
		}).
		error(function(data, status, headers, config) {
			$scope.posts = status;
		});
		

}


function postCtrl ($scope, $http) {
	
}

function aboutCtrl($scope, $http) {


}
