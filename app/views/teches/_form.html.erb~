<%= form_for(@work) do |f| %>
  <% if @work.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@work.errors.count, "error") %> prohibited
        this post from being saved:</h2>
    <ul>
    <% @work.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
   <div class="field">
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </div>
  <%= f.file_field :image %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
